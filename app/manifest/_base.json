{
  "name": "Torus Extension",
  "short_name": "Torus",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Ethereum blockchain wallet secured with one-step Google OAuth logins and 2FA capabilities",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/torus-icon-blue.png",
    "19": "images/torus-icon-blue.png",
    "32": "images/torus-icon-blue.png",
    "38": "images/torus-icon-blue.png",
    "64": "images/torus-icon-blue.png",
    "128": "images/torus-icon-blue.png",
    "512": "images/torus-icon-blue.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bg-libs.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/torus-icon-blue.png",
      "19": "images/torus-icon-blue.png",
      "32": "images/torus-icon-blue.png",
      "38": "images/torus-icon-blue.png",
      "64": "images/torus-icon-blue.png",
      "128": "/images/torus-icon-blue.png",
      "512": "/images/torus-icon-blue.png"
    },
    "default_title": "Torus",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://connect.trezor.io/*/popup.html"
      ],
      "js": [
        "vendor/trezor/content-script.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "http://localhost:8545/",
    "https://*.infura.io/",
    "activeTab",
    "webRequest",
    "*://*.eth/",
    "notifications"
  ],
  "web_accessible_resources": [
    "inpage.js",
    "phishing.html",
    "home.html"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ],
    "ids": [
      "*"
    ]
  }
}
